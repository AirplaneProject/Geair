@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Slider Güncelle</h3></br>
    </div>

    <form method="post">
        @if (ViewBag.message != null)
        {
            <h5 class="text-danger p-3">@ViewBag.message</h5>
        }
            else
            {
            <div class="card-body">
                <input type="hidden" asp-for="@Model.BannerId" />
                <div class="form-group">
                    <label for="exampleInputEmail1">Başlık</label>
                    <input type="text" asp-for="@Model.Title" class="form-control" placeholder="Başlık">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Görsel Link</label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" placeholder="Görsel Link">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Açıklama</label>
                    <textarea class="form-control" asp-for="@Model.Description"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        }
    </form>
</div>