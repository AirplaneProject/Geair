@model List<ResultTicketDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Bilet Alanı</h3><br />
        <small>Lütfen tema bütünlüğü için 1 veri girişi yapınız.</small>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Ad Soyad</th>
                    <th>Cinsiyet</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.Gender</td>
                        <td>@item.Status</td>
                        <td><a onclick="areyousure(this)" id="@item.TicketId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Admin/Tickets/UpdateTicket/@item.TicketId" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function areyousure(button) {
        var id = button.getAttribute("id");
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Tickets/DeleteTicket/" + id;
            }
        });
    }
</script>