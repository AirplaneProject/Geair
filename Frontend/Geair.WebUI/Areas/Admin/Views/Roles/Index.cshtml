@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Roller Listesi</h3><br />
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Rol Adı</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        <td><a onclick="areyousure(this)" id="@item.RoleId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Admin/Roles/UpdateRole/@item.RoleId" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a href="/Admin/Roles/CreateRole" class="btn btn-primary">Yeni Rol Oluştur</a>
    </div>
</div>

<script>
    function areyousure(button) {
        var id = button.getAttribute("id");
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Roles/DeleteRole/" + id;
            }
        });
    }
</script>

