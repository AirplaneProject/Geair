@model CreateAirportDto
@{
    ViewData["Title"] = "CreateAirport";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Havaalanı Bilgileri Ekle</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="AirportTitle">Havaalanı</label>
                <input type="text" name="AirportTitle" class="form-control" placeholder="Havaalanı">
                <span asp-validation-for="AirportTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AirportTitle">Şehir</label>
                <input type="text" name="City" class="form-control" placeholder="Şehir">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

