@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> Hakkımızda Bilgilerini Güncelle</h3>
    </div>
    <form method="post">
        <input type="hidden" asp-for="@Model.AboutId" />
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Başlık</label>
                <input type="text" asp-for="@Model.Title" class="form-control" placeholder="Başlık">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="@Model.Description" placeholder="Açıklama" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">1. Görsel</label>
                <input type="text" asp-for="@Model.ImageUrl1" class="form-control" placeholder="1. Görsel">
                <span asp-validation-for="ImageUrl1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">2. Görsel</label>
                <input type="text" asp-for="@Model.ImageUrl2" class="form-control" placeholder="2. Görsel">
                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>1. Madde</label>
                <textarea asp-for="@Model.Description1" placeholder="1. Madde" class="form-control"></textarea>
                <span asp-validation-for="Description1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>2. Madde</label>
                <textarea asp-for="@Model.Description2" placeholder="2.Madde" class="form-control"></textarea>
                <span asp-validation-for="Description2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>3. Madde</label>
                <textarea asp-for="@Model.Description3" placeholder="3.Madde" class="form-control"></textarea>
                <span asp-validation-for="Description3" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-warning">Güncelle</button>
        </div>
    </form>
</div>

