@model CreateCompanyAddressDto
@{
    ViewData["Title"] = "CreateCompanyAddress";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni İletişim Bilgileri Girişi</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Telefon Numarası</label>
                <input type="text" name="Phone" class="form-control" placeholder="Telefon Numarası">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Adres</label>
                <textarea name="Address" class="form-control" placeholder="Adres"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>