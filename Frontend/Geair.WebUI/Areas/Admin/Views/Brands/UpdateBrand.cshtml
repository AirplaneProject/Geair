@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> Marka Güncelle</h3>
    </div>
    <form method="post">
        @if (ViewBag.message != null)
        {
        <h5 class="text-danger p-3">@ViewBag.message</h5>
        }else{
            <input type="hidden" asp-for="@Model.BrandId" />
        <div class="card-body">
            <div class="form-group">
                <label>Marka Adı</label>
                <input type="text" asp-for="@Model.BrandName" class="form-control" placeholder="Marka Adı">
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Marka Adı</label>
                <input type="text" asp-for="@Model.Logo" class="form-control" placeholder="Marka Logo Link">
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-warning">Güncelle</button>
        </div>
        }
        
    </form>
</div>