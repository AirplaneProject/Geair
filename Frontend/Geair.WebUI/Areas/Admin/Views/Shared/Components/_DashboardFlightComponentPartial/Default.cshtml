
@model List<ResultFlightDto>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-header border-transparent">
                <h3 class="card-title">Son Eklenen Uçuşlar</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table m-0">
                        <thead>
                            <tr>
                                <th>Kalkış Yeri</th>
                                <th>İniş Yeri</th>
                                <th>Kalkış Zamanı</th>
                                <th>İniş Zamanı</th>
                                <th>Uçak</th>
                                <th>Ekonomi Fiyatı</th>
                                <th>Business Fiyatı</th>
                                <th>Gidiş / Dönüş ?</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.OrderByDescending(x => x.DepartureTime).Take(5))
                            {
                                <tr>
                                    <td>@item.DepartureAirport</td>
                                    <td>@item.ArrivalAirport</td>
                                    <td>@item.DepartureTime.ToString("dddd, dd MMMM yyyy")</td>
                                    <td>@item.ArrivalTime.ToString("dddd, dd MMMM yyyy")</td>
                                    <td>@item.AircraftModel</td>
                                    <td><span class="badge badge-success">@item.EconomyPrice</span></td>
                                    <td><span class="badge badge-warning">@item.BusinessPrice</span></td>
                                    <td>@item.FlightType</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            @* <div class="card-footer clearfix">
                <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
                <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
            </div> *@
            <!-- /.card-footer -->
        </div>

    </div>
</div>