@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Sosyal Medya Hesabı Ekle</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label>Platform</label>
                <input type="text" name="Platform" class="form-control" placeholder="Platform">
                <span asp-validation-for="Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ikon</label>
                <input type="text" name="Icon" class="form-control" placeholder="Ikon">
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Url</label>
                <input type="text" name="Url" class="form-control" placeholder="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>