@model List<ResultFlightOptionsDto>
@{
    int count = 1;
}
<section class="service-area">
    <div class="container">
        <div class="row align-items-end mb-50">
            <div class="col-md-8">
                <div class="section-title">
                    <span class="sub-title">Neden Geair</span>
                    <h2 class="title">Harika Uçuş Seçeneklerimiz</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-nav"></div>
            </div>
        </div>
        <div class="row service-active">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="@item.Icon" alt="">
                        </div>
                        <div class="service-content">
                            <span>Hizmet @count</span>
                            <h2 class="title">@item.Title</h2>
                            <div class="service-list">
                                <ul>
                                    <li>@item.Description1 <i class="flaticon-check-mark"></i></li>
                                    <li>@item.Description2 <i class="flaticon-check-mark"></i></li>
                                    <li>@item.Description3 <i class="flaticon-check-mark"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>